 <% if current_user.current_project.nil? %>
  <div class="bg-white shadow">
    <div class="px-4 sm:px-6 lg:mx-auto lg:px-8">
      <div class="py-6 md:flex md:items-center md:justify-between lg:border-t lg:border-gray-200">
        <h1 class="ml-3 text-2xl font-bold leading-7 text-gray-900 sm:leading-9 sm:truncate">No Project Selected</h1>  
      </div>
    </div>
  </div>
<% else %>
 <div class="bg-white shadow overflow-hidden">
    <div class="px-4 sm:px-6 lg:mx-auto lg:px-8">
      <div class="py-6 md:flex md:items-center md:justify-between lg:border-t lg:border-gray-200">
        <div class="flex-1 min-w-0">
          <!-- Profile -->
          <div class="flex items-center">            
            <div>
              <div class="flex items-center">                
                <h1 class="ml-3 text-2xl font-bold leading-7 text-gray-900 sm:leading-9 sm:truncate"><%= "Project: #{current_user.current_project.name}"%></h1>
              </div>
              <dl class="mt-6 flex flex-col sm:ml-3 sm:mt-1 sm:flex-row sm:flex-wrap">
                <dt class="sr-only">Project</dt>
                <dd class="flex items-center text-sm text-gray-500 font-medium sm:mr-6">
                  <!-- Heroicon name: solid/link -->
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd" />
                  </svg>
                  <%= "#{current_user.current_project.base_url}" %>
                </dd>
                <dt class="sr-only">Account status</dt>
                <dd class="mt-3 flex items-center text-sm text-gray-500 font-medium sm:mr-6 sm:mt-0 capitalize">
                  <!-- Heroicon name: solid/check-circle -->
                  <% if @connected %>
                    <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    Connected
                  <% else %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0 mr-1.5 h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>                  
                    Not Connected
                  <% end %>
                </dd>
              </dl>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="mt-8">
    <div class=" mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-lg leading-6 font-medium text-gray-900">Overview</h2>
      <div class="mt-2 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-6">
        <!-- Card -->

        <%= turbo_frame_tag "dashboard_customer_counts", src: dashboard_customer_counts_path, loading: "lazy" do %>
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">Customers</dt>
                    <dd>
                      <div class="text-lg font-medium text-gray-900">Loading...</div>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
        <% end %>        

        <%= turbo_frame_tag "dashboard_lift_event_counts", src: dashboard_lift_event_counts_path, loading: "lazy" do %>
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">Lift Events</dt>
                    <dd>
                      <div class="text-lg font-medium text-gray-900">Loading...</div>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
        <% end %>   

        <%= turbo_frame_tag "dashboard_service_agreement_counts", src: dashboard_service_agreement_counts_path, loading: "lazy" do %>
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">Service Agreements</dt>
                    <dd>
                      <div class="text-lg font-medium text-gray-900">Loading...</div>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
        <% end %>   


        <%= turbo_frame_tag "dashboard_setting_counts", src: dashboard_setting_counts_path, loading: "lazy" do %>
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">Settings</dt>
                    <dd>
                      <div class="text-lg font-medium text-gray-900">Loading...</div>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
        <% end %>          

        <!-- More items... -->
      </div>
    </div>

    <h2 class="mx-auto mt-8 px-4 text-lg leading-6 font-medium text-gray-900 sm:px-6 lg:px-8">Activity</h2>

    <div class="px-4 sm:px-6 lg:px-8 grid grid-cols-1 gap-5 sm:grid-cols-1 lg:grid-cols-3">
      <%= turbo_frame_tag "dashboard_lift_event_activities", src: dashboard_lift_event_activities_path, loading: "lazy" do %>
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Lift Event Summary</dt>
                <dd>
                  <div class="text-lg font-medium text-gray-900">Loading...</div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    <% end %>   
    </div>
  </div>
<% end %>