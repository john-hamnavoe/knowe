<div class="max-w-lg mx-auto my-8">
  <div class="bg-white border border-gray-300 rounded-lg px-8 pt-6 pb-8 w-full">
    <h2 class="pt-4 mb-8 text-4xl font-bold heading"><%= t "devise.invitations.edit.header" %></h2>
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, data: { turbo: false} }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :invitation_token, readonly: true %>
      <% if f.object.class.require_password_on_accepting %>
        <div class="input-group">
          <%= f.label :name, class:"label" %>
          <%= f.text_field :name, class:"input" %>
        </div>
        <div class="input-group">
          <%= f.label :password, class:"label" %>
          <%= f.password_field :password, class:"input" %>
        </div>
        <div class="input-group">
          <%= f.label :password_confirmation, class:"label" %>
          <%= f.password_field :password_confirmation, class:"input" %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
