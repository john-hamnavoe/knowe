<table class="min-w-full divide-y divide-gray-300">
  <thead class="bg-gray-50">
    <tr>
      <%= render "shared/table/sort_table_header", query: @query, column: "name", current_sort: current_sort %>
      <%= render "shared/table/sort_table_header", query: @query, column: "ar_account_code", current_sort: current_sort %>      
      <%= render "shared/table/sort_table_header", query: @query, column: "reference", current_sort: current_sort %>     
      <%= render "shared/table/sort_table_header", query: @query, column: "platform_customer_state_description", current_sort: current_sort %>   
      <%= render "shared/table/sort_table_header", query: @query, column: "platform_department_description", current_sort: current_sort %>                   
      <%= render "shared/table/sort_table_header", query: @query, column: "guid", current_sort: current_sort %>           
      <th scope="col" colspan="2" class="relative pb-1 pt-2.5 pl-3 pr-4 sm:pr-6">
        <span class="sr-only">Show</span>
      </th>
    </tr>
    <tr>
      <%= render "shared/table/search_table_header", form: form, search_field: "name_cont" %>
      <%= render "shared/table/search_table_header", form: form, search_field: "ar_account_code_cont" %>   
      <%= render "shared/table/search_table_header", form: form, search_field: "reference_cont" %>    
      <%= render "shared/table/search_table_header", form: form, search_field: "platform_customer_state_description_cont" %>      
      <%= render "shared/table/search_table_header", form: form, search_field: "platform_department_description_cont" %>                       
      <%= render "shared/table/search_table_header", form: form, search_field: "guid_eq" %>         
      <th scope="col" colspan="2" class="relative pb-1 pt-2.5 pl-3 pr-4 sm:pr-6">
        <span class="sr-only">Show</span>
      </th>
    </tr>    
  </thead>

  <tbody class="divide-y divide-gray-200 bg-white">
    <% @platform_customers.each do |platform_account_customer| %>
      <%= render "platform_account_customer", platform_account_customer: platform_account_customer %>
    <% end %>
  </tbody>
</table>
