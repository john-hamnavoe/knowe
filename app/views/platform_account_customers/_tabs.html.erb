<div>
  <div class="sm:hidden">
    <label for="tabs" class="sr-only">Select a tab</label>
    <!-- TODO if want to make it suitable for SM devices add linking here -->
    <select id="tabs" name="tabs" class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
      <option>Orders</option>

      <option>Rentals</option>

      <option selected>Assignments</option>

      <option>Items</option>
    </select>
  </div>
  <div class="hidden sm:block">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" -->

        <%= link_to "Orders", platform_account_customer_tabs_path(@platform_customer, params: {tab: "orders"}), class: detail_tab_class(@target_frame == "orders") %>
        <%= link_to "Rentals", platform_account_customer_tabs_path(@platform_customer, params: {tab: "rentals"}), class: detail_tab_class(@target_frame == "rentals") %>
        <%= link_to "Assignments", platform_account_customer_tabs_path(@platform_customer, params: {tab: "assignments"}), class: detail_tab_class(@target_frame == "assignments") %>
        <%= link_to "Items", platform_account_customer_tabs_path(@platform_customer, params: {tab: "items"}), class: detail_tab_class(@target_frame == "items") %>
        <%= link_to "Sites", platform_account_customer_tabs_path(@platform_customer, params: {tab: "sites"}), class: detail_tab_class(@target_frame == "sites") %>
        <%= link_to "Contacts", platform_account_customer_tabs_path(@platform_customer, params: {tab: "contacts"}), class: detail_tab_class(@target_frame == "contacts") %>        
        <%= link_to "Lifts", platform_account_customer_tabs_path(@platform_customer, params: {tab: "lifts"}), class: detail_tab_class(@target_frame == "lifts") %>  
      </nav>
    </div>
  </div>
</div>