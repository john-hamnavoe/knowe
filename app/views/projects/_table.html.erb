<table class="min-w-full divide-y divide-gray-300">
  <thead class="bg-gray-50">
    <tr>
      <%= render "shared/table/sort_table_header", query: @query, column: "name", current_sort: current_sort %>
      <%= render "shared/table/sort_table_header", query: @query, column: "base_url", current_sort: current_sort %>
      <%= render "shared/table/sort_table_header", query: @query, column: "version", current_sort: current_sort %>      
      <th scope="col" colspan="2" class="relative pb-1 pt-2.5 pl-3 pr-4 sm:pr-6">
        <span class="sr-only">Edit</span>
      </th>
    </tr>
    <tr>
      <%= render "shared/table/search_table_header", form: form, search_field: "name_cont" %>
      <%= render "shared/table/search_table_header", form: form, search_field: "base_url_cont" %>
      <%= render "shared/table/search_table_header", form: form, search_field: "version_cont" %>   
      <th scope="col" colspan="3" class="relative  pl-3 pr-4 sm:pr-6">
        <span class="sr-only">Edit</span>
      </th>
    </tr>    
  </thead>

  <tbody class="divide-y divide-gray-200 bg-white">
    <% @projects.each do |project| %>
      <%= render project %>
    <% end %>
  </tbody>
</table>