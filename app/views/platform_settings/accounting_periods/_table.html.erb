<table class="min-w-full divide-y divide-gray-300">
  <thead class="bg-gray-50">
    <tr>
      <%= render "shared/table/sort_table_header", query: @query, column: "description", current_sort: current_sort %>
      <%= render "shared/table/sort_table_header", query: @query, column: "start_date", current_sort: current_sort %>
      <%= render "shared/table/sort_table_header", query: @query, column: "end_date", current_sort: current_sort %>
      <%= render "shared/table/sort_table_header", query: @query, column: "is_closed", current_sort: current_sort %>      
      <%= render "shared/table/sort_table_header", query: @query, column: "guid", current_sort: current_sort %>           

    </tr>
    <tr>
      <%= render "shared/table/search_table_header", form: form, search_field: "description_cont" %>
      <%= render "shared/table/search_table_header", form: form, search_field: nil %>
      <%= render "shared/table/search_table_header", form: form, search_field: nil %>
      <%= render "shared/table/search_table_header", form: form, search_field: "is_closed_true" %>   
      <%= render "shared/table/search_table_header", form: form, search_field: "guid_eq" %>         

    </tr>    
  </thead>

  <tbody class="divide-y divide-gray-200 bg-white">
    <% @platform_accounting_periods.each do |platform_accounting_period| %>
      <%= render "platform_accounting_period", platform_accounting_period: platform_accounting_period %>
    <% end %>
  </tbody>
</table>
