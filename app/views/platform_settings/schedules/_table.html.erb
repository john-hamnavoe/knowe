<table class="min-w-full divide-y divide-gray-300">
  <thead class="bg-gray-50">
    <tr>
      <%= render "shared/table/sort_table_header", query: @query, column: "scheduled_date", current_sort: current_sort %>       
      <%= render "shared/table/sort_table_header", query: @query, column: "platform_company_outlet_id", current_sort: current_sort %>        
      <%= render "shared/table/sort_table_header", query: @query, column: "description", current_sort: current_sort %>       
      <%= render "shared/table/sort_table_header", query: @query, column: "guid", current_sort: current_sort %> 
    </tr>
    <tr>
      <%= render "shared/table/search_table_header", form: form, search_field: "scheduled_date_eq" %>    
      <%= render "shared/table/search_table_header", form: form, search_field: "platform_company_outlet_description_cont" %>          
      <%= render "shared/table/search_table_header", form: form, search_field: "description_cont" %> 
      <%= render "shared/table/search_table_header", form: form, search_field: "guid_eq" %>                 
    </tr>    
  </thead>

  <tbody class="divide-y divide-gray-200 bg-white">
    <% @platform_schedules.each do |platform_schedule| %>
      <%= render "platform_schedule", platform_schedule: platform_schedule %>
    <% end %>
  </tbody>
</table>
